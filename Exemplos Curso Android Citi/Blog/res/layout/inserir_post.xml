<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
        <TextView android:text="Autor:" android:id="@+id/tvlabelAutor" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        <EditText android:layout_width="match_parent" android:text="" android:id="@+post/ETautor" android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <TextView android:text="Titulo" android:id="@+id/tvLabelTitulo" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:text="" android:id="@+post/ETTitulo" android:layout_height="wrap_content" android:drawingCacheQuality="high"></EditText>
    <TextView android:text="Texto" android:id="@+id/tvtextoLabel" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:text="" android:id="@+post/ETTexto" android:layout_height="wrap_content"></EditText>
    <TextView android:text="Imagem" android:id="@+id/tvImagemLabel" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <Gallery android:layout_width="match_parent" android:id="@+post/gallera" android:layout_height="wrap_content"></Gallery>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content">
        <Button android:id="@+post/btnPostInserir" android:text="Add" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="Cancelar" android:id="@+post/btnPostCalcelInserir" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
  
     

</LinearLayout>
