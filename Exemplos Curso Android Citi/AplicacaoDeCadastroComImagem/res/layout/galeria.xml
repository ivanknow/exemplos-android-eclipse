<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:text="Selecione a foto" android:id="@+galeria/label" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <Gallery android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+galeria/galeria"></Gallery>
    <LinearLayout android:gravity="center" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:text="Inserir" android:id="@+galeria/Inserir" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="Cancelar" android:id="@+galeria/cancelar" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
    
    </LinearLayout>
